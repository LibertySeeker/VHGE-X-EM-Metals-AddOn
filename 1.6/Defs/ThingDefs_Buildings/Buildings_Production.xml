<Defs>

    <!-- Alloy Furnace -->

    <ThingDef ParentName="BenchBase">
        <defName>EMHG_GasPoweredAlloyFurnace</defName>
        <label>gas-powered alloy furnace</label>
        <description>A gas-powered furnace used for smelting metals and combining them into alloys..</description>
		<thingClass>PipeSystem.Building_ResourceWorkTable_HeatPush</thingClass>
        <graphicData>
            <texPath>Things/Building/EMHG_GasAlloySmelter</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(4,2)</drawSize>
            <shadowData>
                <volume>(2.8, 0.35, 0.59)</volume>
                <offset>(0, 0, 0.08)</offset>
            </shadowData>
            <damageData>
                <cornerTL>Damage/Corner</cornerTL>
                <cornerTR>Damage/Corner</cornerTR>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
        </graphicData>
        <stuffCategories>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>100</costStuffCount>
        <costList>
            <Steel>50</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
        </costList>
        <altitudeLayer>Building</altitudeLayer>
        <fillPercent>0.5</fillPercent>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <WorkToBuild>3000</WorkToBuild>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <Cleanliness>-3</Cleanliness>
        </statBases>
        <size>(3,1)</size>
		<designationCategory>VCHE_PipeNetworks</designationCategory>
        <uiOrder>2510</uiOrder>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <hasInteractionCell>True</hasInteractionCell>
        <interactionCellOffset>(0,0,-1)</interactionCellOffset>
        <surfaceType>Item</surfaceType>
        <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
        <inspectorTabs>
            <li>ITab_Bills</li>
        </inspectorTabs>
        <building>
            <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
        </building>
        <comps>
            <li Class="PipeSystem.CompProperties_ResourceTrader">
				<pipeNet>VHGE_HelixienNet</pipeNet>
				<consumptionPerTick>2</consumptionPerTick>
				<idleConsumptionPerTick>0</idleConsumptionPerTick>
			</li>
            <li Class="CompProperties_Glower">
                <glowRadius>3</glowRadius>
                <glowColor>(217,112,33,0)</glowColor>
            </li>
            <li Class="CompProperties_Flickable">
				<commandTexture>Things/Special/Fluid/VHGE_OverlayBase</commandTexture>
				<commandLabelKey>VHGE_CommandToggleGas_Label</commandLabelKey>
				<commandDescKey>VHGE_CommandToggleGas_Desc</commandDescKey>
			</li>
            <li Class="CompProperties_AffectedByFacilities">
                <linkableFacilities>
                    <li>ToolCabinet</li>
                </linkableFacilities>
            </li>
            <!--Where did this come from? Was it removed from past versions?
			<li Class="CompProperties_HeatPusher">
                <compClass>CompHeatPusherPowered</compClass>
                <heatPerSecond>5</heatPerSecond>
            </li>-->
        </comps>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<heatPerTickWhileWorking>0.32</heatPerTickWhileWorking>
			<workTableRoomRole>Workshop</workTableRoomRole>
			<workTableNotInRoomRoleFactor>0.8</workTableNotInRoomRoleFactor>
		</building>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>Smithing</li>
			<li>VHGE_GasExtraction</li>
        </researchPrerequisites>
		
		<modExtensions>
			<li Class="VEF.Buildings.RecipeInheritanceExtension">
				<inheritRecipesFrom>
					<li>EM_ElectricAlloySmelter</li>
				</inheritRecipesFrom>
			</li>
		</modExtensions>
		
    </ThingDef>

</Defs>