<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Expanded Materials - Metals</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/WorkGiverDef[defName = "EM_DoBillsAlloyFurnaceOven"]/fixedBillGiverDefs</xpath>
          <value>
                <li>EMHG_GasPoweredAlloyFurnace</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName = "VHGE_GasPoweredSmithy"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
          <value>
            <li>VFE_SmithyCabinet</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>