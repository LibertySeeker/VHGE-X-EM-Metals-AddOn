            <xpath>Defs/ThingDef[defName="EMHG_GasPoweredAlloyFurnace"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
               <value>
                  <li>VFEM2_SmithingAnvil</li>
